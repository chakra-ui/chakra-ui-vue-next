{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "types": [
      "jest",
      "node",
      "vue",
    ],
    "lib": ["dom", "esnext"],
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": false,
    "verbatimModuleSyntax": false,
    "noFallthroughCasesInSwitch": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "preserveValueImports": false,
    "ignoreDeprecations": "5.0",
    "declarationMap": true
  },
  "include": [
    "packages/**/*.vue",
    "packages/**/*.json",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/*.tsx",
    "tooling/**/*.ts",
    "tooling/**/*.tsx",
    "tooling/*.tsx",
    "playground/**/*.ts",
    "playground/**/*.tsx",
    "playground/**/*.d.ts",
    "playground/**/*.vue",
    "playground/**/*.json",
    "vite.config.ts",
    "packages/nuxt/src/runtime/chakra.client.template.jst",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "resolveJsonModule": true,
      "noImplicitAny": false
    }
  },
}
